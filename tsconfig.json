{
  "compilerOptions": {
    "outDir": "./dist/",
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "ES2017", "DOM.Iterable"],
    "removeComments": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
